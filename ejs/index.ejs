<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./head %>
</head>

<body class="container">

    <div class="jumbotron">
        <h1>Workshops</h1>
        <p>here is the list of workshop</p>
    </div>

    <a type="button" href="/workshop" class="btn btn-success btn-lg">Create new workshop</a>

    <ul class="list-unstyled"></ul>
    <% workshops.forEach(function(workshop) { %>
    <li class="media my-4">
        <div class="media-body" style="border-bottom: solid 1px grey">
            <h5 class="mt-0 mb-1"><%= workshop.name %></h5>
            <%= workshop.description %>
        </div>
        <a style="margin-right: 1px" href="/remove-workshop/<%= workshop.name %>" class="btn btn-danger">Delete</a>
        <a href="/update-workshop/<%= workshop.name %>" class="btn btn-success">Edit</a>

    </li>
    <% }); %>
    </ul>

    <footer>
        <% include ./footer %>
    </footer>

</body>

</html>