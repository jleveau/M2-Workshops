
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
</head>
<body class="container">

<form action="/workshop/update" method="post">
    <input type="hidden" name="previous_name" id="previous_name" value="<%= workshop.name %>">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" id="name"  placeholder="Workshop Name" value="<%= workshop.name %>" required>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" class="form-control" id="description" placeholder="Give a description for your workshop" value="<%= workshop.description %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a type="button" class="btn btn-secondary" href="/">Cancel</a>
</form>
<form action="/workshop/remove" method="post">
    <input type="hidden" name="name" id="name" value="<%= workshop.name %>">
    <button type="submit" class="float-right btn btn-danger">Delete</button>
</form>

<footer>
    <% include ./footer %>
</footer>

</body>
</html>
