
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
</head>
<body class="container">

<div class="jumbotron">
    <h1>Workshops</h1>
    <p>here is the list of workshop</p>
</div>

<a type="button" href="/workshop" class="btn btn-success btn-lg">Create new workshop</a>
<hr>
<ul class="list-unstyled"></ul>
<% workshops.forEach(function(workshop) { %>
    <li class="media my-4">
        <div class="media-body">
            <h5 class="mt-0 mb-1"><%= workshop.name %> ---
            <%= workshop.description %>
            <a type="button" href="/update-workshop/<%= workshop.name %>" class="btn btn-success btn-lg">Update</a>
          </h5>
          </div>
    </li>
    <hr>

<% }); %>
</ul>

<footer>
    <% include ./footer %>
</footer>

</body>
</html>
